{
  "name": "igo-server",
  "version": "0.1.0",
  "description": "IGo server",
  "main": "main",
  "author": "Leonardo Lucas dos Santos",
  "scripts": {
    "build": "yarn tsc",
    "postinstall": "npm run build",
    "lint": "eslint src -c .eslintrc.js --ext js,ts",
